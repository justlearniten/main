@model mainweb.Models.Excercise
@{
    ViewData["Title"] = "Новый упражнение";
}

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Создание нового упражнения</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ExcerciseName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExcerciseName" class="form-control" />
                <span asp-validation-for="ExcerciseName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-default" asp-action="Index" asp-route-id="">Отмена</a>
            </div>
        </div>
    </div>
</form>



